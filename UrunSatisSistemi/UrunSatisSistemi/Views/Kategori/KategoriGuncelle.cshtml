@model UrunSatisSistemi.Models.TKategori

@{
    ViewBag.Title = "KategoriGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<form method="post">
    <h2>Kategori Güncelle</h2>
    <br />
    <div style="margin-top:15px">
        <label>
            Kategori ID
        </label>
        @Html.TextBoxFor(y => y.KategoriID, new { @class = "form-control", @required = "required" })
    </div>
    <div style="margin-top:15px">
        <label>
            Kategori
        </label>
        @Html.TextBoxFor(y => y.Kategori, new { @class = "form-control", @required = "required" })
    </div>
    <br />
    <br />
    <button class="btn btn-primary">Kategori Bilgilerini Kaydet</button>
</form>

