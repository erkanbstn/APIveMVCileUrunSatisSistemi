@using UrunSatisSistemi.Models
@model List<TKategori>
@{
    ViewBag.Title = "AnaKategori";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h2>Kategoriler</h2>
<br />
<table class="table table-hover">
    <tr><th>ID</th><th>Kategori</th><th>İşlemler</th></tr>
    @foreach (var ktg in Model)
    {
        <tr>
            <td>@ktg.KategoriID</td>
            <td>@ktg.Kategori</td>
            <td>
                @Html.ActionLink("Sil", "KategoriSil", new { ID = ktg.KategoriID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor musunuz?')" })
                <a href="~/Kategori/KategoriGuncelle/@ktg.KategoriID" class="btn btn-primary">Güncelle</a>
            </td>
        </tr>
    }
</table>
<button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
    Yeni Kategori Ekle
</button>
@Html.Action("KategoriPartial", "Kategori")


