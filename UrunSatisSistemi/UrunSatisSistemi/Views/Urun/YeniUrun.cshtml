@model UrunSatisSistemi.Models.TUrun
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />

<form method="post">
    <h2>Yeni Ürün</h2>
    <br />
    <div style="margin-top:15px">
        <label>
            Ürün Adı
        </label>
        @Html.TextBoxFor(y => y.Urun, new { @class = "form-control", @required = "required" })
    </div>
    <div style="margin-top:15px">
        <label>
            Kategori
        </label>
        @Html.DropDownListFor(y => y.Kategori, (List<SelectListItem>)ViewBag.dgr, "Kategori Seçiniz..", new { @class = "form-control" })
    </div>
    <br />
    <div style="margin-top:15px">
        <label>
            Kod
        </label>
        @Html.TextBoxFor(y => y.Kod, new { @class = "form-control", @required = "required" })
    </div>
    <br />
    <div style="margin-top:15px">
        <label>
            Fiyat
        </label>
        @Html.TextBoxFor(y => y.Fiyat, new { @class = "form-control", @required = "required" })
    </div>
    <br />
    <div style="margin-top:15px">
        <label>
            Stok
        </label>
        @Html.TextBoxFor(y => y.Stok, new { @class = "form-control", @required = "required" })
    </div>
    <br />
    <br />
    <button class="btn btn-primary">Yeni Ürün Ekle</button>
</form>

