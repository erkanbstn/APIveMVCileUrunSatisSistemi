@model UrunSatisSistemi.Models.TMusteri 
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<form method="post">
    <h2>Yeni Müşteri</h2>
    <br />
    <div style="margin-top:15px">
        <label>
            Müşteri
        </label>
        @Html.TextBoxFor(y => y.Musteri, new { @class = "form-control", @required = "required" })
    </div>
    <div style="margin-top:15px">
        <label>
            Cinsiyet
        </label>
        @Html.TextBoxFor(y => y.Cinsiyet, new { @class = "form-control", @required = "required" })
    </div>
    <br />
    <div style="margin-top:15px">
        <label>
            Doğum Tarihi
        </label>
        @Html.TextBoxFor(y => y.DogumTarih, new { @class = "form-control", @required = "required" })
    </div>
    <br />
    <br />
    <button class="btn btn-primary">Yeni Müşteri Ekle</button>
</form>



