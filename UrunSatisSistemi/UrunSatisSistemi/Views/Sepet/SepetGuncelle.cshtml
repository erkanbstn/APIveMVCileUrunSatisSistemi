@model UrunSatisSistemi.Models.TSepet
@{
    ViewBag.Title = "SepetGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<form method="post">
    <h2> Sepet Güncelle</h2>
    <br />
    <div style="margin-top:15px">
        <label>
            Sepet ID
        </label>
        @Html.TextBoxFor(y => y.SepetID, new { @class = "form-control", @required = "required" })
    </div>
    <div style="margin-top:15px">
        <label>
            Müşteri
        </label>
        @Html.DropDownListFor(y => y.TMusteri.MusteriID, (List<SelectListItem>)ViewBag.dgr, "Müşteri Seçiniz..", new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>
            Ürün
        </label>
        @Html.DropDownListFor(y => y.TUrun.UrunID, (List<SelectListItem>)ViewBag.dgr2, "Ürün Seçiniz..", new { @class = "form-control" })
    </div>
    <br />
    <div style="margin-top:15px">
        <label>
            Adet
        </label>
        @Html.TextBoxFor(y => y.Adet, new { @class = "form-control", @required = "required" })
    </div>
    <br />
    <div style="margin-top:15px">
        <label>
            Toplam Miktar
        </label>
        @Html.TextBoxFor(y => y.ToplamMiktar, new { @class = "form-control", @required = "required" })
    </div>
    <br />
    <br />
    <button class="btn btn-primary">Sepete Ekle</button>
</form>

